{
  "name": "code-easy-react",
  "version": "0.0.1",
  "private": false,
  "license": "MIT",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "dependencies": {
    "@types/dateformat": "^3.0.1",
    "code-easy-components": "^0.0.11",
    "cross-env": "^7.0.2",
    "dateformat": "^3.0.3",
    "immutability-helper": "^3.0.1",
    "marked": "^1.0.0",
    "node-sass": "^4.12.0",
    "react": "^16.10.2",
    "react-dnd": "^9.4.0",
    "react-dnd-html5-backend": "^9.4.0",
    "react-dom": "^16.10.2",
    "react-monaco-editor": "^0.35.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.2.0",
    "react-switch": "^5.0.1",
    "typeface-roboto": "^0.0.75"
  },
  "scripts": {
    "start": "cross-env REACT_APP_VERSION=$(node -p 'require(\"./package.json\").version') react-scripts start",
    "build": "cross-env REACT_APP_VERSION=$(node -p 'require(\"./package.json\").version') react-scripts build",
    "tsc-build": "tsc",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/marked": "^0.7.4",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^5.1.5",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "3.1.0",
    "husky": "^4.2.5",
    "typescript": "^3.6.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
